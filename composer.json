{
	"config": {
		"platform": {
			"php": "7.3"
		}
	},
	"require": {
		"php": ">=7.3 <=8.1"
	},
	"require-dev": {
		"psalm/phar": "^4.6",
		"roave/security-advisories": "dev-master",
		"nextcloud/coding-standard": "^1.0"
	},
	"scripts": {
		"cs:check": "php-cs-fixer fix --dry-run --diff",
		"cs:fix": "php-cs-fixer fix",
		"lint": "find . -name \\*.php -not -path './vendor/*' -exec php -l \"{}\" \\;"
	}
}
